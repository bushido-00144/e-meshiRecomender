<!DOCTYPE html>
<html>
  <head>
    <title>e-meshiRecomender</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script type="text/javascript">
      let addTag = () => {
          let newTag = document.getElementById('newTag').value;
          fetch('/tags/', {
              method: 'POST',
              body: JSON.stringify({newTag: newTag}),
              headers: {
                  'Accept': 'aplication/json',
                  'Content-Type': 'application/json'
              }
          }).then((res) => {
             return res.json();
          }).then((res) => {
              console.log(res);
              let tagEle = document.createElement('input');
              tagEle.name = res.id;
              tagEle.type = "checkbox";
              tagEle.innerHTML = res.tagname;
              document.getElementById('tags').appendChild(tagEle);
          });
      };
    </script>
  </head>
  <body>
    <h3>ユーザー登録</h3>
    <form action="/users/" method="post">
      ユーザ名：
      <input type="text" name="Username">
      <br />
      好みのタグ：
      <div id="tags">
          <% for(let tag of tags) { %>
        <input type="checkbox" name="<%= tag.id %>"><%= tag.Tag %>
          <% } %>
      </div>
      <br />
      <input type="submit">
    </form>
    タグ追加：
    <input type="text" id="newTag">
    <button id="addTagButton" onclick="addTag()">タグ追加</button>

    <h3>お店登録</h3>
    <form action="/restaurants/" method="post">
      店名：
      <input type="text" name="Name">
      <br />
      タグ：
      <div id="tags">
          <% for(let tag of tags) { %>
        <input type="checkbox" name="<%= tag.id %>"><%= tag.Tag %>
          <% } %>
      </div>
      <br />
      <input type="submit">
    </form>

    <form action="/reviews/" method="post">
      <select name="Reviewer">
          <% for(let user of users) { %>
        <option value="<%= user.id %>"><%= user.Name %></option>
          <% } %>
      </select>
      <select name="RestaurantID">
        <% for(let restaurant of restaurants) { %>
        <option value="<%= restaurant.id %>"><%= restaurant.Name %></option>
        <% } %>
      </select>
      <br />
      総合評価：
      <input type="number" value="0" name="Comprehensive" min="0.0" max="5.0" step="0.1">
      <br />
      味：
      <input type="number" value="0" name="Taste" min="0.0" max="5.0" step="0.1">
      <br />
      サービス：
      <input type="number" value="0" name="Service" min="0.0" max="5.0" step="0.1">
      <br />
      <input type="submit">
    </form>

    <form name="recipientform">
      <select name="Recipient">
          <% for(let user of users) { %>
        <option value="<%= user.id %>"><%= user.Name %></option>
          <% } %>
      </select>
    </form>

    <button onclick="getCollRecommend()">おすすめのお店を見る！</button>
    <br />
    <button onclick="getContRecommend()">おすすめのお店を見る！</button>

    <script>
      let getCollRecommend = () => {
        let selectedIndex = document.forms['recipientform'].elements['Recipient'].selectedIndex;
        let userid = document.forms['recipientform'].elements['Recipient'].options[selectedIndex].value;
        fetch('/recommend/collaborative?userid=' + userid).then((res) => {
          return res.json();
        }).then((data) => {
          console.log(data);
        }).catch((err) => {
          console.log(err);
        });
      }

      let getContRecommend = () => {
        let selectedIndex = document.forms['recipientform'].elements['Recipient'].selectedIndex;
        let userid = document.forms['recipientform'].elements['Recipient'].options[selectedIndex].value;
        fetch('/recommend/content?userid=' + userid).then((res) => {
          return res.json();
        }).then((data) => {
          console.log(data);
        }).catch((err) => {
          console.log(err);
        });
      }
    </script>
  </body>
</html>
